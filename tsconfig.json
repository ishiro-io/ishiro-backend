{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strict": true,
    "lib": ["esnext"],
    "paths": {
      "api/*": ["apps/api/src/*"],
      "database": ["libs/database/src"],
      "database/*": ["libs/database/src/*"],
      "services": ["libs/services/src"],
      "services/*": ["libs/services/src/*"],
      "utils": ["libs/utils/src"],
      "utils/*": ["libs/utils/src/*"]
    }
  }
}
